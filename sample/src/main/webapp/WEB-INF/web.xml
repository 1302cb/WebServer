<?xml version="1.0" encoding="UTF-8"?>
<web-app>
    
    <HTTPServlet>
        <HTTPServlet-name>LoginServlet</HTTPServlet-name>
        <HTTPServlet-class>com.sinjinsong.webserver.sample.web.HTTPServlet.LoginServlet</HTTPServlet-class>
    </HTTPServlet>
    
    <HTTPServlet>
        <HTTPServlet-name>LogoutServlet</HTTPServlet-name>
        <HTTPServlet-class>com.sinjinsong.webserver.sample.web.HTTPServlet.LogoutServlet</HTTPServlet-class>
    </HTTPServlet>
    
    <HTTPServlet>
        <HTTPServlet-name>UserServlet</HTTPServlet-name>
        <HTTPServlet-class>com.sinjinsong.webserver.sample.web.HTTPServlet.UserServlet</HTTPServlet-class>
    </HTTPServlet>
    
    <HTTPServlet-mapping>
        <HTTPServlet-name>LoginServlet</HTTPServlet-name>
        <url-pattern>/login</url-pattern>
    </HTTPServlet-mapping>
    
    <HTTPServlet-mapping>
        <HTTPServlet-name>LogoutServlet</HTTPServlet-name>
        <url-pattern>/logout</url-pattern>
    </HTTPServlet-mapping>

    <HTTPServlet-mapping>
        <HTTPServlet-name>UserServlet</HTTPServlet-name>
        <url-pattern>/user</url-pattern>
    </HTTPServlet-mapping>
    
    
    
    
    <!--Filter-->
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.sinjinsong.webserver.sample.web.filter.LoginFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/</url-pattern>
    </filter-mapping>
</web-app>
    